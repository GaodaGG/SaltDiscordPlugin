{
  "configs": [
    {
      "title": "Config",
      "config": "config.json",
      "preferences": [
        {
          "key": "displayType",
          "type": "list",
          "title": "正在听 {显示类型}",
          "default_value": "Details",
          "summary": "选择显示在成员列表状态中的信息类型",
          "entries": [
            "应用名",
            "歌手",
            "歌名"
          ],
          "entry_values": [
            "Name",
            "State",
            "Details"
          ]
        },
        {
          "key": "disableNetEase",
          "type": "switch",
          "title": "禁用从网易云获取封面",
          "default_value": false,
          "summary": "启用后将不再尝试从网易云音乐获取封面"
        },
        {
          "key": "disableKugou",
          "type": "switch",
          "title": "禁用从酷狗获取封面",
          "default_value": false,
          "summary": "启用后将不再尝试从酷狗音乐获取封面"
        },
        {
          "key": "disableQQ",
          "type": "switch",
          "title": "禁用从QQ音乐获取封面",
          "default_value": false,
          "summary": "启用后将不再尝试从QQ音乐获取封面"
        },
        {
          "type": "button",
          "title": "尝试重连 Discord",
          "summary": "点击尝试重新连接 Discord",
          "on_click": "com.gg.SaltDiscordPlugin.ButtonClick.onReconnectClick"
        }
      ]
    },
    {
      "title": "Cloudflare 相关",
      "config": "config.json",
      "preferences": [
        {
          "key": "useCFR2",
          "type": "switch",
          "title": "使用自己的Cloudflare R2 存储",
          "default_value": false,
          "summary": "启用后将从音频文件提取封面并上传到您的R2存储，而不是在线获取封面"
        },
        {
          "key": "cfr2BucketName",
          "type": "edittext",
          "title": "存储桶名称 (Bucket Name)",
          "default_value": "",
          "summary": "您在Cloudflare R2中创建的存储桶名称"
        },
        {
          "key": "cfr2Endpoint",
          "type": "edittext",
          "title": "访问端点 (Endpoint)",
          "default_value": "",
          "summary": "位于S3 API前半段，如: https://<end_point>.r2.cloudflarestorage.com"
        },
        {
          "key": "cfr2PublicUrl",
          "type": "edittext",
          "title": "公开访问URL",
          "default_value": "",
          "summary": "R2存储桶公开访问URL，如: https://cdn.yourdomain.com 或 https://bucket.r2.dev"
        },
        {
          "key": "cfr2AccessKey",
          "type": "edittext",
          "title": "访问密钥 (Access Key)",
          "default_value": "",
          "summary": "R2 API Token的Access Key ID"
        },
        {
          "key": "cfr2SecretKey",
          "type": "edittext",
          "title": "密钥 (Secret Key)",
          "default_value": "",
          "summary": "R2 API Token的Secret Access Key"
        },
        {
          "type": "button",
          "title": "关于 Cloudflare R2",
          "summary": "点击查看相关介绍和使用教程",
          "on_click": "com.gg.SaltDiscordPlugin.ButtonClick.onButtonClick",
          "arrow_type": "link"
        }
      ]
    }
  ]
}